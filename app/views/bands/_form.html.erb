<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% action_method = band.persisted? ? "patch" : "post" %>
<% submit_text = band.persisted? ? "Edit Band" : "Add Band" %>

<form action="<%= action_url %>" method="post">
  <%= auth_token_input %>
  <input type="hidden" name="_method" value="<%= action_method %>">
  <label for="band_name">Name</label>
  <input type="text" name="band[name]" id="band_name" value="<%= @band.name %>">
  <br>
  <input type="submit" value="<%= submit_text %>">
</form>
